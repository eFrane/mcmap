#ifndef __config_hpp
#define __config_hpp

#include <string>

namespace mcmap
{
  typedef struct 
  {
    int         bounds[4];
    int         blockSize;
    int         direction;
    std::string outputDir;
    bool        renderEnd;
    bool        renderNether;
    bool        renderOverworld;
    bool        renderOverworldNight;
    bool        saveMapStatistics;
    bool        tiledOutput;
    int         tileSize;
    bool        verbose;
    std::string worldPath;
    int         zoomLevels[12];
  } config_t;

  extern config_t config;

  typedef struct 
  {
    int major;
    int minor;
    int patch;
  } version_t;

  const version_t MCMAP_VERSION = {@mcmap_VERSION_MAJOR@, @mcmap_VERSION_MINOR@, @mcmap_VERSION_PATCH@};
}

#endif
