#ifndef __config_hpp
#define __config_hpp

#include <string>
#include <vector>

namespace mcmap
{
  typedef struct 
  {
    bool verbose;
    std::string worldPath;
    std::vector<int> bounds;
    int blockSize;
    std::vector<int> zoomLevels;
    bool tiledOutput;
    int tileSize;
    std::string outputDir;
  } config_t;

  extern config_t config;

  typedef struct 
  {
    int major;
    int minor;
    int patch;
  } version_t;

  const version_t MCMAP_VERSION = {@mcmap_VERSION_MAJOR@, @mcmap_VERSION_MINOR@, @mcmap_VERSION_PATCH@};
}

#endif
